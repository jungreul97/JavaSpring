package com.ict.controller.di.classfile;

import org.springframework.stereotype.Component;

@Component
public class Broadcast {
	private Stage stage;
	
	public Broadcast(Stage stage) {
		this.stage = stage;
	}
	
	public void onAir(Stage stage,Singer singer) {
		System.out.println("방송 송출중인 "+stage+"에서 "+singer+"가 노래를 합니다.");
	}

}
