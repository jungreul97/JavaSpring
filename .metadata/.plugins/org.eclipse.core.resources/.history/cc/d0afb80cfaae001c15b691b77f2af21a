package com.ict.controller.di.classfile;

import org.springframework.stereotype.Component;

@Component
public class Library extends Book{
	
	private Book book;
	
	public Library() {
		// Library가 Book에 의존하는 상태로 만들어 주세요.
		// 단, 생성자는 void생성자(아무것도 입력받지 않고 아무것도 안 하는)로 만들어주시고
	}
	
	// 멤버 변수 Book에 대한 setter만 만들어주세요.
	public void setBook(Book book) {
		this.book = book;
	}
	
	// 멤버변수  Book을 이용해 "도서관에서 책을 읽습니다."라는 문장을 실행하는
	// browse 메서드를 생성해주세요.
	public void browse(Book book) {
		System.out.println("도서관에서 책을 읽습니다.");
	}
	
	
	
}
